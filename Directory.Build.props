    <PropertyGroup>
        <GeneratedSources>**/*.g.cs</GeneratedSources>
        <DefaultItemExcludes Condition="'$(JetBrainsDesignTimeBuild)' == ''">$(DefaultItemExcludes);$(GeneratedSources)</DefaultItemExcludes>
    </PropertyGroup>

</Project>